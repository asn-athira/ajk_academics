<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h2 class="h2">Home / Students</h2>
      

      </div>

               <%= render partial: 'layouts/student/breadcrumbs' %>


<div class="container-fluid" style="background-color: white;">
      <h3>Students</h3>

        <table id="student_table" class="display" >
          <thead>
            

            <tr>
              <th>Id</th>
              <th>Name</th>
              <th>Age</th>
              <th>Gender</th>
              <th>Address</th>
              <th>Phone </th>
              <th>Email</th>
              <th>Course</th>              
              <th>Action</th>


            </tr>
          </thead>
          <tbody>
          <% @students.each do |student| %>

            <tr>
              <td><%=student.id%></td>
              <td><%=student.firstname%> <%=student.lastname%></td>
              <td><%=student.age%></td>
              <td><%=student.gender%></td>
              <td><%=student.address%></td>
              <td><%=student.phone%></td>
               <td><%=student.email%></td> 
               <td><%=student.course.name%></td>             
              <td><%= link_to student_path(student) do %><i class="fa fa-eye"></i><% end %>
             <%= link_to edit_student_path(student), :remote => true do %><i class="fa fa-edit"></i><% end %>
             <%= link_to student_path(student),  data: {confirm: "Are you sure you want to delete this?"}, method: :delete do %><i class="fa fa-trash"></i><% end %>

              </td>
            </tr>
             <% end %>


            </tbody>
        

 
</table><br>
    </div>
